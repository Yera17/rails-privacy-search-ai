<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<body class="personshow-body">
  <div class="personshow-container">
    <table class="personshow-table">
      <thead>
        <tr>
          <th class="personshow-page-title" colspan="2"><%= @person.full_name %></th>
        </tr>
      </thead>
      <tbody>
        <% @person.sources.each do |source| %>
          <tr>
            <td class="showheader-1">Company Identification Method:</td>
            <td class="showcolumn-1"><%= source.identification_method %></td>
          </tr>
          <tr>
            <td class="showheader-2">Person Identification Method:</td>
            <td class="showcolumn-2"><%= source.identified_text %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="show-back-button-container">
  <%= link_to document_people_path(params[:document_id]), class: 'show-back-button' do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>
</div>

  </div>
</body>
